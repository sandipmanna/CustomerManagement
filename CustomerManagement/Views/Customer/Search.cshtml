@using CustomerManagement.Models;
@using CustomerManagement.ViewModel;

@model CustomerViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    <link href="~/Styles/BasicStyle.css" rel="stylesheet" />
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/Customer.js"></script>
    <script>

        var app = angular.module("MyApp", []);
        app.controller("CustomerViewModel", CustomerViewModelData);
    </script>
</head>
<body ng-app="MyApp">
    <div style="margin: 20px 0px 0px 20px">
        <a href="~/Home/Home">Home</a>
        <div ng-controller="CustomerViewModel">
            <span class="Myclass">Enter Customer Code: </span> <input name="Customer.CustomerCode" id="Text1" type="text" ng-model="CustomerViewModel.Customer.CustomerCode" />
            <span>&emsp;</span>
            <input id="Submit1" type="button" value="Search Customer" ng-click="LoadDataByCode()" />
            <br />
            <br />

            @Html.Partial("DisplayCustomers", Model)
        </div>
    </div>
</body>
</html>
